#!/usr/bin/env groovy
String cron_string = cronTimer == 5?'H/5 * * * *':'H/10 * * * *'
pipeline {                                                                                                       
     agent any
     triggers {
        cron('H/5 * * * *')
     }
     parameters {
        choice(name:'Cron_Config', choices:['H/5 * * * *','H/7 * * * *','H/10 * * * *'], description:"")
     }
     
     tools {nodejs "node"}
     
     stages {
        stage ("Build") {
           steps {
             sh 'npm install'
           }
        }
        stage ("Test Unit") {
            steps {
                sh "npm test"
            }
        }
     }
  }