pipeline {                                                                                                       
     agent any
     triggers {
        cron("${params.Cron_Config}")
     }
     parameters {
        choice(name:'Cron_Config', choices:['H/5 * * * *','H/7 * * * *','H/10 * * * *'], description:"")
     }
     
     tools {nodejs "node"}
     
     stages {
        stage ("Build") {
           steps {
             sh 'npm install'
           }
        }
        stage ("Test Unit") {
            steps {
                sh "npm test"
            }
        }
     }
  }