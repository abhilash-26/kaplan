pipeline {                                                                                                       
     agent any
     triggers {
        cron('H/5 * * * *')
     }
     parameters {
        choice(name:'Choices', choices:['one','two','three'], description:"")
     }
     
     tools {nodejs "node"}
     
     stages {
        stage ("Build") {
           steps {
             sh 'npm install'
           }
        }
        stage ("Test Unit") {
            steps {
                sh "npm test"
            }
        }
     }
  }