#!/usr/bin/env groovy
pipeline {                                                                                                       
     agent any
     triggers {
        cron('H/5 * * * *')
     }
     parameters {
        choice(name:'Cron_Config', choices:[20,40,100], description:"")
     }
     
     tools {nodejs "node"}
     
     stages {
        stage ("Build") {
           steps {
             sh 'npm install'
           }
        }
        stage ("Test Unit") {
            steps {
                sh "npm test"
            }
        }
        stage ("Run Code") {
            steps {
                // sh "node index.js ${params.Cron_Config}"
            }
        }
     }
     post {
        always {
            echo "Build Finished"
        }
        success {
            echo "Build success"
        }
        failure {
            echo "Build failed"
        }
     }
  }